<div class="content">
<div class="cards-container">

  <div class="row" >
    <% @items.each do |item| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card-text">
      <%= link_to '#' do %>
   <%= image_tag('i_found_this.png') %>
   <%= link_to "", item_path(item), class: "card-link" %>
<% end %>

      </div>


      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%=cl_image_path item.photo%>');">
        <div class="card-description"> description
        </div>

        <div class="card-category">
          <%= item.name %>
        </div>
        <div class="card-header"> header
        </div>

        <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">

        <%= link_to "", item_path(item), class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div><!--cards-container-->

  <div id="map" style="position: relative; overflow: hidden; width: 50%; height: 600px;" data-markers="<%= @markers.to_json %>"  >
  </div>
</div><!--content-->
