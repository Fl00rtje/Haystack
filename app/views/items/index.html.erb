<%= render 'shared/search_form' %>

<div class="container">
  <h1>Items</h1>



  <div class="row">
    <% @items.each do |item| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%=cl_image_path item.photo%>');">
        <div class="card-category">
          <%= item.name %>
        </div>
        <div class="card-description">
          <%= item.price %><br>
          <%= item.category %><br>
          <%= item.description %><br>
          <%= item.shop_location %><br>
          <%= item.available %><br>
        </div>

        <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
        <%= link_to "", item_path(item), class: "card-link" %>

    </div>
  </div>
  <% end %>
</div>

  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
  ></div>
</div>


